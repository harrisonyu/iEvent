
= form_for @event, :url => { :action => "create"}, :html => {:class => "nifty_form"} do |f|
	= f.label :name
	= f.text_field :name
	= f.label :event_start_time
	= f.datetime_select :event_start_time, :end_year => Time.now.year+10, :start_year => Time.now.year, :order => [:month, :day, :year]
	= f.label :event_end_time
	= f.datetime_select :event_end_time, :end_year => Time.now.year+10, :start_year => Time.now.year, :order => [:month, :day, :year]
	= f.label "Cost in dollars"
	= f.text_field	 :cost
	= f.label :location
	= f.text_field :location
	= f.label :description
	= f.text_field :description
	= f.label :registration_deadline
	= f.date_select :event_end_time, :end_year => Time.now.year+10, :start_year => Time.now.year, :order => [:month, :day, :year]
	= f.label :food
	= f.select :food, ['Yes','No']
	%br
	%br

	=f.submit "Create", :class => "btn btn-success"

	%br
	%br
	%br
	=link_to "Back", root_path, :class => "btn btn-primary"