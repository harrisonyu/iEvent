%h2
	<font size = "7">
	= @event.name
	Details
	= link_to "Edit Event Name", update_name_event_path, :class => "btn btn-mini btn-info"
	</font>
%br
%br

<font size = "5"> Event Type </font>
%br
= @event.event_type
= link_to "Edit Event Type", update_type_event_path, :class => "btn btn-mini btn-info"

%br
%br
%br

<font size = "5"> Event Starting Time </font>
%br
= @event.event_start_time.to_s(:long)
= link_to "Edit Event Start Time", update_start_time_event_path, :class => "btn btn-mini btn-info"
%br
%br
%br

<font size = "5"> Event Ending Time </font>
%br
= @event.event_end_time.to_s(:long)
= link_to "Edit Event End Time", update_end_time_event_path, :class => "btn btn-mini btn-info"
%br
%br
%br

<font size = "5"> Cost to attend</font>
%br
= @event.cost
= link_to "Edit Event Cost", update_cost_event_path, :class => "btn btn-mini btn-info"
%br	
%br
%br

/-if @event.location != ""
<font size = "5"> Location </font>
%br
= @event.location
= link_to "Edit Event Location", update_location_event_path, :class => "btn btn-mini btn-info"

%br
%br
%br

/-if @event.description != ""
<font size = "5"> Description</font>
%br
= @event.description
= link_to "Edit Event Description", update_description_event_path, :class => "btn btn-mini btn-info"

%br
%br
%br

<font size = "5"> Registration Deadline</font>
%br
= @event.registration_deadline.to_s(:long)
= link_to "Edit Event Registration Deadline", update_registration_deadline_event_path, :class => "btn btn-mini btn-info"
%br
%br
%br

<font size = "5"> Is there food? </font>
%br
= @event.food
= link_to "Edit Event Food", update_food_event_path, :class => "btn btn-mini btn-info"

%br
%br
%br

