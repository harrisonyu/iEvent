
= form_for @speaker, :url => { :action => "create"}, :html => {:class => "nifty_form"} do |f|
	= f.label "Speaker Name"
	= f.text_field :speakerName
	%br
	%br

	=f.submit "Add Speaker", :class => "btn btn-success"

%br
<font = 5> Available Speakers to Choose From: </font>
%br
%br
-@speakers.each do |h|
	%tr
		%td
			= link_to h.name, show_person_path(h.id), class: "linkify-td"
%br
%br
%br
= link_to "Create New Person", new_person_path, class: "btn"
%br
%br
=link_to "Back", show_event_path, :class => "btn btn-primary"